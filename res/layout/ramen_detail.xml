<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sakura"
    android:fadingEdge="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sakura"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/ramen_view"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/sumi"
                android:layout_width="200dp"
                android:layout_height="200dp" />
        </FrameLayout>

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/black"
            android:paddingLeft="1dp"
            android:paddingTop="1dp"
            android:shrinkColumns="1" >

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/light_gray"
                    android:gravity="center|center"
                    android:padding="3dp"
                    android:text="営業時間" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/white"
                    android:padding="3dp"
                    android:paddingLeft="6dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/light_gray"
                    android:gravity="center|center"
                    android:padding="3dp"
                    android:text="定休日" />

                <TextView
                    android:id="@+id/dayoff"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/white"
                    android:padding="3dp"
                    android:paddingLeft="6dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/light_gray"
                    android:gravity="center|center"
                    android:padding="3dp"
                    android:text="TEL" />

                <TextView
                    android:id="@+id/tel"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/white"
                    android:padding="3dp"
                    android:paddingLeft="6dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/light_gray"
                    android:gravity="center|center"
                    android:padding="3dp"
                    android:text="HP" />

                <TextView
                    android:id="@+id/hp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/white"
                    android:padding="3dp"
                    android:paddingLeft="6dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/light_gray"
                    android:gravity="center|center"
                    android:padding="3dp"
                    android:text="住所" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@android:color/white"
                    android:padding="3dp"
                    android:paddingLeft="6dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/sakura"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/twitter_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:background="@color/sakura"
                android:src="@layout/twitter_buttons" />

            <ImageView
                android:id="@+id/phone_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:background="@color/sakura"
                android:src="@layout/phone_buttons" />

            <ImageView
                android:id="@+id/hp_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:background="@color/sakura"
                android:src="@layout/hp_buttons" />

            <ImageView
                android:id="@+id/map_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="6dp"
                android:background="@color/sakura"
                android:src="@layout/map_buttons" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>